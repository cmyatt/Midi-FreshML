(* Factorial function *)
let fact(x : real) : real =
	if x = 0. then 1. else x*(fact x-1.);

fact 90.;

(* Approximate e using 1 + 1/1! + 1/2! + ... *)
let e(y : real) : real =
	let eapprox(n : real * real) : real =
		let (a, b) = n in
		if a = 0. then b
		else eapprox(a-1., b + 1./(fact a))
	in eapprox(y, 1.);

e 0.;
e 1.;
e 2.;
e 14.;

